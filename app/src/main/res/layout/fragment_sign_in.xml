<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/signin_signup_fragment_bg"
    tools:context=".ui.login_signup.onboarding.SignInFragment">
 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:scrollbars="vertical"
     >

 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">
  <TextView
      android:id="@+id/top_txt"
      android:text="Sign in to your\nAccount"
      android:textColor="@color/red"
      android:textSize="22sp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="20dp"
      android:layout_marginStart="40dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/email_txt"
      android:text="Email ID"
      android:textColor="@color/black"
      app:layout_constraintTop_toBottomOf="@id/top_txt"
      app:layout_constraintStart_toStartOf="@id/top_txt"
      android:layout_marginTop="30dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <EditText
      android:id="@+id/email_ed"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/email_txt"
      app:layout_constraintStart_toStartOf="@id/email_txt"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="40dp"
      android:layout_marginTop="10dp"
      android:drawableRight="@drawable/ic_baseline_person_24"
      android:drawableTint="@color/red"
      android:backgroundTint="@color/black1"
      android:textCursorDrawable="@color/black"
      android:hint="Johndoe123@gmail.com"
      android:textColorHint="@color/white1"
      android:inputType="textEmailAddress"
      android:textColor="@color/black"
      android:maxLines="1"
      />
  <TextView
      android:id="@+id/password_txt"
      android:text="Password"
      android:textColor="@color/black"
      app:layout_constraintTop_toBottomOf="@id/email_ed"
      app:layout_constraintStart_toStartOf="@id/email_ed"
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <EditText
      android:id="@+id/password_ed"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/password_txt"
      app:layout_constraintStart_toStartOf="@id/password_txt"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginEnd="40dp"
      android:layout_marginTop="10dp"
      android:inputType="textPassword"
      android:drawableRight="@drawable/ic_baseline_lock_open_24"
      android:drawableTint="@color/red"
      android:backgroundTint="@color/black1"
      android:textCursorDrawable="@color/black"
      android:hint="*************"
      android:textColorHint="@color/white1"
      android:textColor="@color/black"
      android:maxLines="1"
      />
  <TextView
      android:id="@+id/forget_password_txt"
      android:text="Forgot Password?"
      android:textColor="@color/red1"
      app:layout_constraintTop_toBottomOf="@id/password_ed"
      app:layout_constraintEnd_toEndOf="@id/password_ed"
      android:layout_marginTop="10dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <Button
      android:id="@+id/sign_in_btn"
      app:layout_constraintTop_toBottomOf="@id/forget_password_txt"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:text="Sign In"
      android:paddingStart="20dp"
      android:paddingEnd="20dp"
      android:layout_marginTop="20dp"
      android:backgroundTint="@color/red"
      android:textColor="@color/white"
      android:textAllCaps="false"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <TextView
      android:id="@+id/login_with_txt"
      android:text="Login with"
      android:textColor="@color/black"
      app:layout_constraintTop_toBottomOf="@id/sign_in_btn"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="20dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <ImageView
      android:id="@+id/finger_lock_btn"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/icon_bg"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toStartOf="@id/face_lock_btn"
      android:src="@drawable/ic_baseline_fingerprint_24"
      app:tint="@color/red"
      android:padding="5dp"
      android:layout_marginStart="30dp"
      app:layout_constraintTop_toBottomOf="@id/login_with_txt"
      app:layout_constraintStart_toStartOf="parent"
      />
  <ImageView
      android:id="@+id/face_lock_btn"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/icon_bg"
      android:src="@drawable/face_lock_icon"
      app:tint="@color/red"
      android:padding="5dp"
      app:layout_constraintEnd_toStartOf="@id/or_txt"
      app:layout_constraintTop_toTopOf="@id/finger_lock_btn"
      app:layout_constraintStart_toEndOf="@id/finger_lock_btn"
      />
  <TextView
      android:id="@+id/or_txt"
      android:text="or"
      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="@id/face_lock_btn"
      app:layout_constraintStart_toEndOf="@id/face_lock_btn"
      app:layout_constraintBottom_toBottomOf="@id/face_lock_btn"
      app:layout_constraintEnd_toStartOf="@id/facebook_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
  <ImageView
      android:id="@+id/facebook_btn"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:background="@drawable/icon_bg"
      android:src="@drawable/facebook_icon"
      android:padding="5dp"
      app:tint="@android:color/holo_blue_dark"
      app:layout_constraintTop_toTopOf="@id/face_lock_btn"
      app:layout_constraintStart_toEndOf="@id/or_txt"
      app:layout_constraintEnd_toStartOf="@id/google_btn"
      />
  <ImageView
      android:id="@+id/google_btn"
      android:layout_width="40dp"
      android:padding="5dp"
      android:layout_marginEnd="30dp"
      android:layout_height="40dp"
      android:background="@drawable/icon_bg"
      android:src="@drawable/google_icon"
      app:layout_constraintTop_toTopOf="@id/facebook_btn"
      app:layout_constraintStart_toEndOf="@id/facebook_btn"
      app:layout_constraintEnd_toEndOf="parent"
      />

  <LinearLayout
      android:id="@+id/dont_have_acc_txt"
      android:layout_width="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/face_lock_btn"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:orientation="horizontal"
      android:layout_marginTop="40dp"
      android:layout_height="wrap_content">
  <TextView
      android:text="Don`t have an account?  "
      android:textColor="@color/black"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
   <TextView
       android:id="@+id/register_now_btn"
       android:text="Register Now"
       android:textColor="@color/red"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>


  </LinearLayout>
  <ImageView
      android:id="@+id/last_img"
      app:layout_constraintTop_toBottomOf="@id/dont_have_acc_txt"
      android:src="@drawable/login_sign_img"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="-50dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
 </androidx.constraintlayout.widget.ConstraintLayout>
 </ScrollView>
</FrameLayout>