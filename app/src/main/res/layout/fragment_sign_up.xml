<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/signin_signup_fragment_bg"
    tools:context=".ui.login_signup.onboarding.SignUpFragment">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical"
      >


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <TextView
        android:id="@+id/top_txt"
        android:text="Create an\nAccount"
        android:textColor="@color/red"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/name_txt"
        android:text="Name"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/top_txt"
        app:layout_constraintStart_toStartOf="@id/top_txt"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/name_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_txt"
        app:layout_constraintStart_toStartOf="@id/name_txt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:drawableTint="@color/red"
        android:backgroundTint="@color/black1"
        android:textCursorDrawable="@color/black"
        android:hint="John Doe"
        android:textColorHint="@color/white1"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:maxLines="1"
        />
    <TextView
        android:id="@+id/email_txt"
        android:text="Email ID"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/name_ed"
        app:layout_constraintStart_toStartOf="@id/name_ed"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/email_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_txt"
        app:layout_constraintStart_toStartOf="@id/email_txt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:drawableTint="@color/red"
        android:backgroundTint="@color/black1"
        android:textCursorDrawable="@color/black"
        android:hint="Johndoe123@gmail.com"
        android:textColorHint="@color/white1"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:maxLines="1"
        />
    <TextView
        android:id="@+id/contact_txt"
        android:text="Contact no"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/email_ed"
        app:layout_constraintStart_toStartOf="@id/email_ed"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.nsa.quantumassignmentapp.ui.login_signup.extra.CountryCodeSpinner
        android:id="@+id/country_code_picker"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/contact_ed"
        app:layout_constraintBottom_toBottomOf="@id/contact_ed"
        app:layout_constraintStart_toStartOf="@id/contact_txt"
        app:layout_constraintEnd_toStartOf="@id/contact_ed"
        android:spinnerMode="dropdown"/>

    <EditText
        android:id="@+id/contact_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/contact_txt"
        app:layout_constraintStart_toEndOf="@id/country_code_picker"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_baseline_phone_24"
        android:drawableTint="@color/red"
        android:backgroundTint="@color/black1"
        android:textCursorDrawable="@color/black"
        android:hint="124567890"
        android:textColorHint="@color/white1"
        android:inputType="number"
        android:textColor="@color/black"
        android:maxLength="10"
        />
    <TextView
        android:id="@+id/password_txt"
        android:text="Password"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/contact_ed"
        app:layout_constraintStart_toStartOf="@id/country_code_picker"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/password_ed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_txt"
        app:layout_constraintStart_toStartOf="@id/password_txt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:drawableRight="@drawable/ic_baseline_lock_open_24"
        android:drawableTint="@color/red"
        android:backgroundTint="@color/black1"
        android:textCursorDrawable="@color/black"
        android:hint="*************"
        android:textColorHint="@color/white1"
        android:textColor="@color/black"
        android:maxLines="1"
        />
    <LinearLayout
        android:id="@+id/terms_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_ed"
        app:layout_constraintStart_toStartOf="@id/password_ed"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
    <CheckBox
        android:id="@+id/terms_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree with "
        android:textColor="@color/black"
        />
      <TextView
          android:id="@+id/terms_condion_btn"
          android:textColor="@color/red"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

    </LinearLayout>
    <Button
        android:id="@+id/sign_up_btn"
        app:layout_constraintTop_toBottomOf="@id/terms_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Sign Up"
        android:visibility="gone"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/have_acc_txt"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sign_up_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
      <TextView
          android:text="Already have an account?  "
          android:textColor="@color/black"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/sign_in_btn"
          android:text="Sign in!"
          android:textColor="@color/red"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/last_img"
        app:layout_constraintTop_toBottomOf="@id/have_acc_txt"
        android:src="@drawable/login_sign_img"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</FrameLayout>