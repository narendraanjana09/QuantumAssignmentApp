<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/back_to_city_txt"
        android:text="back to the city"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/level5_recycler_view"
        app:layout_constraintTop_toBottomOf="@id/back_to_city_txt"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        tools:listitem="@layout/level5_layout"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/clothing_shoes_txt"
        android:text="Clothing &amp; shoes"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/level5_recycler_view"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/level6_recycler_view"
        app:layout_constraintTop_toBottomOf="@id/clothing_shoes_txt"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        tools:listitem="@layout/level5_layout"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red2"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/level6_recycler_view"
        >
        <TextView
            android:id="@+id/flash_deals_txt"
            android:text="flash deals"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/discounts_txt"
            android:text="Discounts you can't resist!"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/flash_deals_txt"
            app:layout_constraintTop_toBottomOf="@id/flash_deals_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/timer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/hours"
                android:text="10"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textStyle="bold"
                android:padding="2dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/minutes"
                android:text="10"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textStyle="bold"
                android:padding="2dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text=":"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/seconds"
                android:text="10"
                android:padding="2dp"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/level7_recycler_view"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/discounts_txt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            tools:listitem="@layout/level5_layout"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>